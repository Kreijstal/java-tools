// For Codespaces/devcontainer: install Node.js, Java, Rust, and Krakatau (krak2)
{
  "name": "Java Tools DevContainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable"
    }
  },
  "postCreateCommand": "npm i && bash scripts/install-krakatau.sh && npx playwright install-deps"
}
