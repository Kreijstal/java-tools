#!/bin/bash
# Convenience wrapper for Krakatau disassembler
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
KRAKATAU_BIN="$SCRIPT_DIR/../tools/krakatau/Krakatau/target/release/krak2"
if [ ! -x "$KRAKATAU_BIN" ]; then
	echo "Error: Krakatau binary not found at $KRAKATAU_BIN"
	exit 1
fi
"$KRAKATAU_BIN" dis "$@"